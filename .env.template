# Hopper Configuration Template
# Copy this file to .env and customize for your environment

# ===== Application Settings =====
HOPPER_ENV=development
HOPPER_DEBUG=true
HOPPER_LOG_LEVEL=INFO

# ===== Database Configuration =====
# PostgreSQL (Production)
DATABASE_URL=postgresql://hopper:hopper_dev@localhost:5432/hopper

# SQLite (Development/Testing) - Uncomment to use SQLite instead
# DATABASE_URL=sqlite:///./hopper.db

# ===== Redis Configuration =====
REDIS_URL=redis://localhost:6379/0
REDIS_ENABLED=true

# ===== API Configuration =====
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1
API_RELOAD=true

# CORS Settings
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# ===== Authentication & Security =====
# Generate a secret key: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-here-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ===== MCP Server Configuration =====
MCP_ENABLED=true
MCP_SERVER_NAME=hopper

# ===== Intelligence Configuration =====
# Routing Strategy: rules, llm, sage
DEFAULT_ROUTING_STRATEGY=rules

# Anthropic API Key (for LLM routing)
ANTHROPIC_API_KEY=

# ===== Memory Configuration =====
# Working Memory
WORKING_MEMORY_TTL=3600

# Episodic Memory (OpenSearch) - Phase 3
OPENSEARCH_URL=http://localhost:9200
OPENSEARCH_ENABLED=false

# Consolidated Memory (GitLab) - Phase 3
GITLAB_URL=https://gitlab.com
GITLAB_TOKEN=
CONSOLIDATED_MEMORY_ENABLED=false

# ===== Platform Integration =====
# GitHub
GITHUB_TOKEN=
GITHUB_SYNC_ENABLED=false

# GitLab
GITLAB_SYNC_TOKEN=
GITLAB_SYNC_ENABLED=false

# ===== Federation =====
FEDERATION_ENABLED=false
HOPPER_INSTANCE_NAME=hopper-local
HOPPER_INSTANCE_SCOPE=GLOBAL

# ===== Development Settings =====
# Auto-reload on code changes
AUTO_RELOAD=true

# Database auto-create tables (disable in production)
AUTO_CREATE_TABLES=true

# Test mode
TESTING=false
