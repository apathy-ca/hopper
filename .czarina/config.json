{
  "project": {
    "name": "hopper",
    "slug": "hopper-v2_0_0",
    "version": "2.0.0",
    "phase": 2,
    "omnibus_branch": "cz2/release/v2.0.0-phase2",
    "repository": "/home/jhenry/Source/hopper",
    "orchestration_dir": ".czarina"
  },
  "orchestration": {
    "mode": "local",
    "auto_push_branches": false
  },
  "workers": [
    {
      "id": "instance-architecture",
      "agent": "claude",
      "branch": "cz2/feat/instance-architecture",
      "description": "Implement HopperInstance class with scope support and lifecycle management",
      "dependencies": []
    },
    {
      "id": "instance-registry",
      "agent": "claude",
      "branch": "cz2/feat/instance-registry",
      "description": "Create instance registry, discovery, and parent-child relationships",
      "dependencies": ["instance-architecture"]
    },
    {
      "id": "delegation-protocol",
      "agent": "claude",
      "branch": "cz2/feat/delegation-protocol",
      "description": "Build task delegation and completion notification between instances",
      "dependencies": ["instance-registry"]
    },
    {
      "id": "scope-behaviors",
      "agent": "claude",
      "branch": "cz2/feat/scope-behaviors",
      "description": "Implement Global, Project, and Orchestration specific routing logic",
      "dependencies": ["delegation-protocol"]
    },
    {
      "id": "instance-visualization",
      "agent": "claude",
      "branch": "cz2/feat/instance-visualization",
      "description": "Build CLI commands and tools for viewing instance hierarchy",
      "dependencies": ["scope-behaviors"]
    },
    {
      "id": "testing",
      "agent": "claude",
      "branch": "cz2/feat/testing",
      "description": "Create comprehensive test suite for Phase 2 multi-instance features",
      "dependencies": ["instance-visualization"]
    },
    {
      "id": "integration",
      "agent": "claude",
      "branch": "cz2/feat/integration",
      "description": "Integration testing and Phase 2 completion",
      "role": "integration",
      "dependencies": ["testing"],
      "merges": ["instance-architecture", "instance-registry", "delegation-protocol", "scope-behaviors", "instance-visualization", "testing"]
    }
  ],
  "daemon": {
    "enabled": true,
    "auto_approve": ["read", "write", "commit"]
  }
}
