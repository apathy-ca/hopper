{
  "project": {
    "name": "hopper",
    "slug": "hopper-v1_0_0",
    "version": "1.0.0",
    "phase": 1,
    "omnibus_branch": "cz1/release/v1.0.0-phase1",
    "repository": "/home/jhenry/Source/hopper",
    "orchestration_dir": ".czarina"
  },
  "orchestration": {
    "mode": "local",
    "auto_push_branches": false
  },
  "workers": [
    {
      "id": "project-setup",
      "agent": "claude",
      "branch": "cz1/feat/project-setup",
      "description": "Initialize Python project structure, dev environment, and core models",
      "dependencies": []
    },
    {
      "id": "database",
      "agent": "claude",
      "branch": "cz1/feat/database",
      "description": "Implement database schema, models, and migrations",
      "dependencies": ["project-setup"]
    },
    {
      "id": "api-core",
      "agent": "claude",
      "branch": "cz1/feat/api-core",
      "description": "Build FastAPI application with task endpoints and authentication",
      "dependencies": ["database"]
    },
    {
      "id": "mcp-integration",
      "agent": "claude",
      "branch": "cz1/feat/mcp-integration",
      "description": "Create MCP server for Claude integration",
      "dependencies": ["api-core"]
    },
    {
      "id": "cli-tool",
      "agent": "claude",
      "branch": "cz1/feat/cli-tool",
      "description": "Build CLI tool for task management (hopper add, list, etc.)",
      "dependencies": ["api-core"]
    },
    {
      "id": "routing-engine",
      "agent": "claude",
      "branch": "cz1/feat/routing-engine",
      "description": "Implement rules-based routing intelligence",
      "dependencies": ["api-core"]
    },
    {
      "id": "testing",
      "agent": "claude",
      "branch": "cz1/feat/testing",
      "description": "Create comprehensive test suite for Phase 1 features",
      "dependencies": ["mcp-integration", "cli-tool", "routing-engine"]
    },
    {
      "id": "integration",
      "agent": "claude",
      "branch": "cz1/feat/integration",
      "description": "Integration testing and end-to-end workflow validation",
      "role": "integration",
      "dependencies": ["testing"],
      "merges": ["project-setup", "database", "api-core", "mcp-integration", "cli-tool", "routing-engine", "testing"]
    }
  ],
  "daemon": {
    "enabled": true,
    "auto_approve": ["read", "write", "commit"]
  }
}
